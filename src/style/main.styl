@import url('fonts.styl')


*,
*:before,
*:after 
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%

maincolor = #4E4D4D
mainfont = 'Work Sans', sans-serif
secondaryfont = 'Fira Sans Extra Condensed', sans-serif

html 
    margin 0
    padding 0
    box-sizing border-box  

body
    margin 0
    padding 0

    background-color #FFC8C8
    background-image url(../assets/images/curvasdenivel.svg)
    background-size cover

a 
    text-decoration none
    color maincolor
    font-family mainfont

#nav
    display flex
    flex-direction row
    align-items center
    justify-content flex-end

    height 8vh

.nav__buttons
    display flex
    justify-content space-between
    margin-right 2em

.nav__buttons_item
    padding 5px
    text-align center
    border-bottom rgba(255, 110, 127, .6) solid 4px
    cursor pointer
    color #4E4D4D
    margin 10px
    font-size 20px
    font-family 'Work Sans', sans-serif
    transition all 1s ease

    &:hover
        border-bottom rgba(255, 110, 127, 1) solid 2px
        font-size 35px
        font-weight bold

.nav__buttons_item-link
    color inherit
    text-decoration none

.grid
    display flex 
    justify-content space-evenly
    align-items center

    height 90vh

.grid__home
    display flex
    flex-direction column
    justify-content center
    align-items left

    height 60vh

    h1 
        font-family mainfont
        font-size 60px
        margin 0
        padding 0
        color maincolor

    h3 
        font-family secondaryfont
        color maincolor
        font-size 25px
        margin-top 25px

.grid__home_title
    margin-left 5em
    margin-top 10em

.grid__content_left

    display flex 
    flex-direction column 
    justify-content center 
    align-items center

    p 
        font-family secondaryfont
        color maincolor
        text-align left
        padding 25px
        width 30em

    img 
        display flex

.grid__content_right

    display flex 
    flex-direction column 
    justify-content center 
    align-items center

    h3
        font-family secondaryfont
        color maincolor
        font-size 20px
        min-width 235px
        margin-right 10%

    p
        font-family secondaryfont
        color maincolor
        text-align left
        padding 25px
        width 30em

    span 
        font-family secondaryfont
        color maincolor
        text-align center
        padding 10px


.slides__content 
    width 30em
    max-width 100%
    opacity 0.5

    margin-right 2em
    margin-top 2em

    &:hover
        opacity .9

.grid__footer
    display flex
    flex-direction row
    justify-content flex-end
    align-items center

    color maincolor
    font-family mainfont

    margin-right 2em
    margin-bottom 1em


.grid__footer_box
    display flex
    flex-direction column
    justify-content center
    text-align right

    margin 10px
    padding 5px

    position absolute
    bottom 0

.social__media_icons

    display flex
    flex-direction row
    justify-content space-between



// configs view about

.hidden
    opacity 0

.console-container
    font-family 'Work Sans', sans-serif
    font-size 2em
    text-align left
    margin 10% 0px 0px 5%
    width 100%

.console-underscore
    display inline-block
    position relative
    top -0.14em
    left 10px


@media (max-width: 850px) {
        
    body {

        display flex
        flex-direction column
        justify-content center

    }

    #nav {
        justify-content center
        margin 0
    }

    .nav__buttons {
        margin 0
    }

    .nav__buttons_item {
        font-size 0.8em
        text-transform uppercase

        &:hover {
            border-bottom rgba(255, 110, 127, 1) solid 2px
            font-size 0.9em
        }

    }

    .grid {
        display flex
        flex-direction column
        height 100%

    }

    .grid__home {
    
        display flex
        flex-direction column
        justify-content center
        align-items center
    
        h1 {
            font-family mainfont
            font-size 3em
            margin 0
            padding 0
            color maincolor
        }
        h3 {
            font-family secondaryfont
            color maincolor
            font-size 1em
            margin-top 25px
            text-align left
        }
    }

    .grid__home_title {
        margin 2em      
    }
    

    .grid__content_left {

        p {
            width 20em
        }

        h1 {
            font-size 4em
            padding 25px
            margin-top 1.5em
        }

        h3 {
            font-size 2em
            padding 25px
            margin-top -1em
        }

        img {
            width 15em
            height 15em
            margin auto
        }    
    }

    .grid__content_right {

        margin auto
        
        p {
            width 20em
            font-size 1.1em
        }
    }

    .slides__content {
        width 90%
        margin 0
    }

    .grid__footer {
        justify-content center
        margin auto auto 2em auto
    }

    .grid__footer_box {
        h3 {
            font-size 1em
        }    
    }
       
}

@media (min-width: 850px) {

    .grid__content_left {

        p {
            padding 5px
        }

        h1 {
            font-size 4em
            padding 25px
            margin-right 10em
        }

        h3 {
            font-size 2em
            padding 25px
        }

        img {
            width 300px
            height 350px
            margin auto
        }    
    }

}
